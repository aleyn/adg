#! /bin/sh

TARGET_ARCH=i486
TARGET_PLATFORM=mingw32
BUILD_ARCH=`uname -m`
BUILD_PLATFORM=unknown-linux-gnu


TARGET="$TARGET_ARCH-$TARGET_PLATFORM"
BUILD="$BUILD_ARCH-$BUILD_PLATFORM"

CFLAGS="-O2 -Wall -march=$TARGET_ARCH -mms-bitfields -fexceptions" \
    `dirname $0`/../configure --target=$TARGET --host=$TARGET --build=$BUILD $*
